  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.right-label{
  width: 220rpx;
  height: 30px;
  line-height: 30px;
  text-align: center;
}
.btn-area {
  width: 100%;
}
.btn-next{
  width: 100% !important;
  border-radius: 20px;
}
.btn-disabled{
  width: 100% !important;
  border-radius: 20px;
  background: #CCCCCC !important;
}
